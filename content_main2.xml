<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Main2Activity"
    tools:showIn="@layout/activity_main2"
    android:background="#ffffff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="What Ingredients do you want to use?"
        android:id="@+id/textView7"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#FF0004FF"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eggs"
        android:id="@+id/eggs"
        android:checked="false"
        android:buttonTint="#FF0004FF"
        android:typeface="monospace"
        android:layout_below="@+id/textView7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Milk"
        android:id="@+id/milk"
        android:checked="false"
        android:buttonTint="#FF0004FF"
        android:typeface="monospace"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/eggs"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cheese"
        android:id="@+id/cheese"
        android:checked="false"
        android:buttonTint="#FF0004FF"
        android:typeface="monospace"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/milk"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chicken"
        android:id="@+id/chicken"
        android:checked="false"
        android:buttonTint="#FF0004FF"
        android:typeface="monospace"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/cheese"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salad"
        android:id="@+id/salad"
        android:checked="false"
        android:buttonTint="#FF0004FF"
        android:typeface="monospace"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/chicken"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Beef"
        android:id="@+id/beef"
        android:checked="false"
        android:buttonTint="#FF0004FF"
        android:typeface="monospace"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/salad"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pork"
        android:id="@+id/pork"
        android:checked="false"
        android:buttonTint="#FF0004FF"
        android:typeface="monospace"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/beef"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vegetables"
        android:id="@+id/vegetables"
        android:checked="false"
        android:buttonTint="#FF0004FF"
        android:typeface="monospace"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/pork"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fruit"
        android:id="@+id/fruit"
        android:checked="false"
        android:buttonTint="#FF0004FF"
        android:typeface="monospace"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/vegetables"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:id="@+id/next"
        android:textColor="#d5d5d5"
        android:background="#0004ff"
        android:textStyle="bold"
        android:typeface="sans"
        android:enabled="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="53dp"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bread"
        android:id="@+id/bread"
        android:checked="false"
        android:buttonTint="#FF0004FF"
        android:typeface="monospace"
        android:layout_below="@+id/fruit"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
